<h1>Burgers To EAT!</h1>
<img src="/assets/images/burger.jpg">
{{!-- <h2 id="be">Burgers to EAT!</h2> --}}

<ul id="uneaten">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger_block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2 id="bd">Burgers Devoured!</h2>

<ul id="eaten">
  {{#each burgers}}
    {{#if devoured}}
      {{> burger_block devoured=false}}
    {{/if}}

  {{/each}}
</ul>
<div class="maker">
<h2 id="make">Build Your Own Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="bu" name="name">
  </div>
